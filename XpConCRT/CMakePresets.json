{
  "version": 2,
  "cmakeMinimumRequired": {
      "major": 3,
      "minor": 20,
      "patch": 0
  },
  "configurePresets": [
    {
      "name": "default",
      "hidden": true,
      "binaryDir": "${sourceDir}/cmake-build-${presetName}"
    },
    {
      "name": "ninja",
      "inherits": "default",
      "generator": "Ninja Multi-Config"
    },
    {
      "name": "clang-gnu",
      "inherits": "ninja",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++",
        "CMAKE_C_FLAGS": "-m32",
        "CMAKE_CXX_FLAGS": "-m32"
      }
    },
    {
      "name": "msbuild",
      "inherits": "default",
      "displayName": "MSBuild Config",
      "description": "Build With MSBuild",
      "generator": "Visual Studio 16 2019",
      "architecture": "Win32",
      "toolset": "v141_xp,host=x64"
    },
    {
      "name": "msvc-14.27",
      "inherits": "msbuild",
      "description": "Last version supports targeting XP",
      "toolset": "host=x64,version=14.27"
    }
  ],
  "buildPresets": [
    {
      "name": "default",
      "hidden": true,
      "verbose": true,
      "configuration": "RelWithDebInfo"
    },
    {
      "name": "ninja",
      "inherits": "default",
      "configurePreset": "ninja"
    },
    {
      "name": "clang-gnu",
      "inherits": "ninja",
      "configurePreset": "clang-gnu"
    },
    {
      "name": "msbuild",
      "inherits": "default",
      "configurePreset": "msbuild",
      "nativeToolOptions": [
        "/p:XPDeprecationWarning=false"
      ]
    },
    {
      "name": "msvc-14.27",
      "inherits": "msbuild",
      "configurePreset": "msvc-14.27"
    }
  ],
  "testPresets": [
    {
      "name": "default",
      "hidden": true,
      "output": {
        "verbosity": "verbose"
      },
      "configuration": "RelWithDebInfo"
    },
    {
      "name": "ninja",
      "inherits": "default",
      "configurePreset": "ninja"
    },
    {
      "name": "clang-gnu",
      "inherits": "ninja",
      "configurePreset": "clang-gnu"
    },
    {
      "name": "msbuild",
      "inherits": "default",
      "configurePreset": "msbuild"
    },
    {
      "name": "msvc-14.27",
      "inherits": "msbuild",
      "configurePreset": "msvc-14.27"
    }
  ]
}
